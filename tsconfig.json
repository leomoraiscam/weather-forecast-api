{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "./dist",
    "lib": ["es2019"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": true,
    "incremental": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@test/*": ["./test/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
